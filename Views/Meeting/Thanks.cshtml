@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>
    @if (Model.WillAttend)
    {
        <p>Teşekkürler @Model.Name, toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor.</p>
        <a class="btn btn-outline-primary" href="#">Katılımcıları listele</a>
    }
    else
    {
        <p>@Model.Name, toplantıya katılmadığından dolayı üzgünüz.</p>
        <a class="btn btn-outline-primary" href="/meeting/list">Katılımcıları listele</a>

    }
</main>