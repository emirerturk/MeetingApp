@model List<UserInfo>
@{
    ViewBag.Title = "Katılım Listesi";
}
<h1 class="h4">Toplantı Katılım listesi</h1>
<table class="table table-border">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
            <td>Detay</td>
        </tr>
    </thead>
    <tbody>
        @{
            int attemptedUsers = 0;
        }
        @foreach (var user in Model)
        {
            if (@user.WillAttend)
            {
                attemptedUsers++;
            }
            var durum = user.WillAttend == true ? "Evet" : "Hayır";
            var className = user.WillAttend == true ? "table-success" : "table-danger";
            <tr class="@className">
                <td>@user.Name</td>
                <td>@durum</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="card">
    <p class="text-center mt-3">@attemptedUsers kişi toplantıya katıldı</p>
</div>